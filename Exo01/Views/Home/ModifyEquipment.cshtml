
@{
    ViewBag.Title = "ModifyEquipment";
}
@model Exo01.Models.Equipement

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f8f8;
        margin: 0;
        padding: 0;
    }

    nav {
        background-color: #333;
        color: #fff;
        padding: 10px;
    }

        nav a {
            margin-right: 20px;
            text-decoration: none;
            color: #fff;
            font-weight: bold;
        }

    h2 {
        color: #333;
    }

    form {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 8px;
        color: #333;
    }

    input[type="text"],
    input[type="number"],
    input[type="submit"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #333;
        color: #fff;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #555;
        }

    header {
        background-color: #333;
        color: #fff;
        padding: 10px;
        text-align: center;
    }
</style>

<nav>
    <a href="~/Home/Index">Home</a>
    <a href="~/Home/AddEquipment">Add Equipment</a>
</nav>

<header>
    <h1>Inventory Management System</h1>
</header>



<form method="post" action="~/Home/ModifyEquipment">
    <label for="sn">S/N: </label>
    <input type="text" name="sn" placeholder="Serial Number" value="@ViewBag.Equipment.SN" readonly>
    <label for="sn">Nom: </label>
    <input type="text" name="name" placeholder="Name" value="@ViewBag.Equipment.Nom">
    <label for="sn">Type: </label>
    <input type="text" name="type" placeholder="Type" value="@ViewBag.Equipment.Type">
    <label for="sn">Description: </label>
    <input type="text" name="description" placeholder="Description" value="@ViewBag.Equipment.Description">
    <label for="sn">Price: </label>
    <input type="number" name="price" placeholder="Price" value="@ViewBag.Equipment.Prix">
    <input type="submit" value="Modify">
</form>
